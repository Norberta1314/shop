.container {
  display: block;
  align-items: flex-start;
  padding-bottom: 60px;
}

.head-image {
  width: 100%;
}

.price {
  margin: 10px;
  color: #ff0000;
  font-size: 18px;
}

.price .rmb {
  font-size: 10px;
  margin-right: 3px;
}

.title {
  font-size: 16px;
  font-weight: 500;
  text-align: left;
  margin: 0 10px 10px 10px;
}

.info {
  margin: 15px;
  border-radius: 5px;
  background: #eee;
  font-size: 10px;
  padding: 10px;
  color: #888;
}

.divider {
  margin: 10px 0 0 0px;
  background: #eee;
  height: 5px;
}

.number-group {
  display: flex;
  padding: 10px 20px;
  border-bottom: 1px solid #eee;
  font-size: 12px;
  color: #777;
}

.number-group .label {
  width: 40px;
  text-align: justify-all;
  text-align-last: justify;
}

.number-group .number {
  margin-left: 20px;
  color: #555;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.bottom .bottom-button {
  width: 100%;
  background: #ff0000;
  color: white;
}
